    <script>
        function createRadarChart(ctx, label, data, color) {
            return new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: ['Objetivo 1', 'Objetivo 2', 'Objetivo 3'],
                    datasets: [{
                        label: label,
                        data: data,
                        backgroundColor: color + '33', // transparencia
                        borderColor: color,
                        borderWidth: 2,
                        pointBackgroundColor: color
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        r: {
                            beginAtZero: true,
                            min: 0,
                            max: 10
                        }
                    }
                }
            });
        }

        createRadarChart(document.getElementById('chartMental'), 'Mental', [8, 6, 7], '#007bff');
        createRadarChart(document.getElementById('chartPhysical'), 'F√≠sica', [5, 9, 6], '#28a745');
        createRadarChart(document.getElementById('chartUniversity'), 'Universidad', [7, 4, 8], '#dc3545');
        createRadarChart(document.getElementById('chartWork'), 'Trabajo', [6, 8, 5], '#6f42c1');
    </script>

